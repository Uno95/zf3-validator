{
    "name": "xtend/zf3-validator",
    "description": "Xtension Validator for ZF3",
    "type": "library",
    "license": "BSD-3-Clause",
    "keywords": [
        "zf3",
        "zf2",
        "logger",
        "psr3"
    ],
    "homepage": "http://xtendindonesia.co.id",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^7.0",
        "zendframework/zend-validator": "^2.10"
    },
    "autoload": {
        "psr-4": {
            "Xtend\\Validator\\": "src/Xtend/Validator"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Xtend\\ValidatorTest\\": "test/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-develop": "0.0.1-dev"
        }
    },
    "scripts": {
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "test": "phpunit"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^2.8",
        "phpunit/phpunit": "^5.5"
    }
}
